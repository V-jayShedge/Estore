
<div class="container" style="margin-top:100px; margin-bottom: 200px;">
    <h4 class="display-4">My cart :-</h4>
    <% include ./partials/messages %>
    <% if (typeof cart !== "undefined") { %>

        <table class="table table-striped table-light alignmiddle" style="width: 100% ;">
            <tr class="text-center pb-3">
                <th>Image</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
                <th>Total</th>
            </tr>
           
         <% var total=0 %>
         <% cart.forEach(function(product){ %>
            <% var subtotal=product.qty * product.price %>
            <% total += subtotal     %>
        <tr class="text-center pb-5">
            <td><img src="<%= product.image %>" class="img-fluid" width="200px;" alt="image"></td>
            <td><%= product.pname %></td>
            <td><%= product.qty %></td>
            <td><%= product.price %></td>
            <td>
                <a class="btn" href="/cart/update/<%= product.pname %>?action=add"><i class="fa fa-plus-circle"></i></a>&nbsp;
                <a class="btn" href="/cart/update/<%= product.pname %>?action=remove"><i class="fa fa-minus-circle"></i></a>&nbsp;
                <a class="btn" href="/cart/update/<%= product.pname %>?action=clear"><i class="fa fa-trash"></i></a>&nbsp;
            </td>
            <td><%= subtotal  %></td>
        </tr>
        <% }) %>
        
        <tr >
            <td colspan="6" class="pr-5">
                <p class="float-right lead ">Total:<%= total %></p> 
          </td>
        </tr>
          
    
        </table>  
      <div class="row">     
        <div class="col-12 d-flex justify-content-end">
         <a href="/cart/buynow" class="btn btn-success mr-3">Buy now</a>   
        <a href="/cart/clearcart" class="clearcart btn btn-danger ">Clear</a>     
        </div>
    </div>
               
    <% } else { %>

    <h3 style="text-align:center">Oops..Your cart is empty..</h3>
    <h3 style="text-align:center">Try adding some of the products</h3>
            
    <% } %>
 
</div>
<script>
$(function(){
    $('a.clearcart').on('click',function(){
        if(!confirm('confirm clear cart')){
            return false
        }
    })
})

</script>

